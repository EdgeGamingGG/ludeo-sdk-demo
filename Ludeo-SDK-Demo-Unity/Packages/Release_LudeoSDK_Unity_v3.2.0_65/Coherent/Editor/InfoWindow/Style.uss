.body {
    height: 100%;
    width: 97%;
    overflow: visible;
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 10px;
    margin-bottom: 5px;
    align-items: stretch;
    width: 95%;
}

.scroll-view {
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    align-items: stretch;
    justify-content: space-between;
    width: 100%;
    height: 89%;
    opacity: 1;
    font-size: 12px;
}

.button {
    height: 25px;
    -unity-font-style: bold;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    width: 100%;
    height: 10%;
}

.message {
    white-space: normal;
    overflow: visible;
    justify-content: flex-start;
    align-items: auto;
    height: 100%;
    -unity-text-align: upper-left;
    min-height: 80%;
    width: 100%;
}
